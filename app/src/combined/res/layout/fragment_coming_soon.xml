<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ComingSoonFragment">

    <View
        android:id="@+id/top_view_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_patient_background_height"
        android:background="@drawable/add_patient_background"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/coming_soon_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/coming_soon"
        app:layout_constraintBottom_toTopOf="@+id/coming_soon_message"
        app:layout_constraintTop_toBottomOf="@id/top_view_background"
        app:layout_constraintVertical_chainStyle="packed"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
        android:id="@+id/coming_soon_message"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="This feature will be added soon in the upcoming updates..."
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coming_soon_image" />

</androidx.constraintlayout.widget.ConstraintLayout>