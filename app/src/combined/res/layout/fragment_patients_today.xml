<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddNewPatientFragment">

    <View
        android:id="@+id/add_patient_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_patient_background_height"
        android:background="@drawable/add_patient_background"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/patients_today_count_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/patients_today_count_title_margin_top"
        android:layout_marginStart="@dimen/patients_today_count_title_margin_start"
        android:layout_marginEnd="@dimen/patients_today_count_title_margin_end"
        android:gravity="center"
        android:text="@string/patients_today_result_count_title_text"
        android:textColor="@color/black"
        android:textSize="@dimen/patients_today_count_title_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_patient_background"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/patients_today_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/patients_today_recycler_view_vertical_margin"
        android:layout_marginBottom="@dimen/patients_today_recycler_view_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/patients_today_count_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <ImageView
        android:id="@+id/no_results_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/empty_box"
        app:layout_constraintTop_toTopOf="@id/patients_today_recycler_view"
        app:layout_constraintBottom_toBottomOf="@id/patients_today_recycler_view"
        app:layout_constraintStart_toStartOf="@id/patients_today_recycler_view"
        app:layout_constraintEnd_toEndOf="@id/patients_today_recycler_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>