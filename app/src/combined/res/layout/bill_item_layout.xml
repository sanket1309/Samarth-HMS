<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Name"
        android:textSize="15sp"
        android:textColor="@color/blue_theme"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:hint="Add Item"
        app:layout_constraintTop_toBottomOf="@id/item_name_title"
        android:background="@drawable/login_edittext_background"/>

    <TextView
        android:id="@+id/rate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Rate"
        android:textSize="15sp"
        android:textColor="@color/blue_theme"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_name"/>

    <EditText
        android:id="@+id/rate"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:inputType="number"
        android:hint="200"
        app:layout_constraintTop_toBottomOf="@id/rate_title"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/login_edittext_background"/>

    <TextView
        android:id="@+id/quantity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Quantity"
        android:textSize="15sp"
        android:textColor="@color/blue_theme"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/quantity"
        app:layout_constraintTop_toBottomOf="@id/item_name"/>

    <EditText
        android:id="@+id/quantity"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:inputType="number"
        android:hint="3"
        app:layout_constraintTop_toBottomOf="@id/quantity_title"
        app:layout_constraintStart_toEndOf="@id/rate"
        android:background="@drawable/login_edittext_background"/>

    <TextView
        android:id="@+id/sum_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Sum"
        android:textSize="15sp"
        android:textColor="@color/blue_theme"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        app:layout_constraintStart_toStartOf="@id/sum"/>

    <EditText
        android:id="@+id/sum"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:inputType="number"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/sum_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/add_visit_edittext_background"/>

    <TextView
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:textSize="15sp"
        android:text="Delete"
        android:textColor="@color/blue_theme"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/sum"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>