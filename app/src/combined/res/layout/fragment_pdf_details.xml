<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GenerateBillFragment">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_patient_background_height"
        android:background="@drawable/add_patient_background"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/pdf_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/pdf_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pdf_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pdf_image"
        app:layout_constraintBottom_toBottomOf="@id/pdf_image"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:text="Generate_Bill_SBP00001_Dandaghvan.pdf"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/open_pdf_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/save_new_patient_button_height"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="@dimen/save_new_patient_button_vertical_margin"
        android:background="@drawable/login_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pdf_image"
        android:textColor="@color/white"
        android:text="Open File"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/share_file_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/save_new_patient_button_height"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="@dimen/save_new_patient_button_vertical_margin"
        android:background="@drawable/login_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/open_pdf_button"
        android:textColor="@color/white"
        android:text="Share File"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>