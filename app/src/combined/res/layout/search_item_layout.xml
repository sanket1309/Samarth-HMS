<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@drawable/patient_info_background_blue"
        android:elevation="@dimen/patient_info_layout_info_block_elevation"
        android:layout_marginStart="@dimen/patient_info_layout_info_block_horizontal_margin"
        android:layout_marginEnd="@dimen/patient_info_layout_info_block_horizontal_margin"
        android:layout_marginTop="@dimen/patient_info_layout_info_block_margin_top"
        android:layout_marginBottom="@dimen/patient_info_layout_info_block_margin_bottom"
        android:paddingTop="@dimen/patient_info_layout_info_block_vertical_padding"
        android:paddingBottom="@dimen/patient_info_layout_info_block_vertical_padding"
        android:paddingStart="@dimen/patient_info_layout_info_block_horizontal_padding"
        android:paddingEnd="@dimen/patient_info_layout_info_block_horizontal_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYP. Macberry"
            android:textSize="18dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>