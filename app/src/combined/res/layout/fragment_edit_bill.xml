                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="@string/other_charges_title_text"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/management_charges_container"
                app:layout_constraintStart_toStartOf="parent"/>

            <include
                android:id="@+id/other_charges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                layout="@layout/bill_item_layout"
                app:layout_constraintTop_toBottomOf="@id/other_charges_title"/>

