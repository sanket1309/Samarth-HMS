                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="@string/treatment_charges_title_text"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/diagnosis"
