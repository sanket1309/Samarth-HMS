        android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginTop="@dimen/save_new_patient_button_vertical_margin"
        android:layout_marginBottom="@dimen/save_new_patient_button_vertical_margin"
        android:background="@drawable/login_button_background"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/generate_bill_button"
        android:textColor="@color/white"
        android:text="@string/save_button_text"
        android:textAllCaps="false"/>

