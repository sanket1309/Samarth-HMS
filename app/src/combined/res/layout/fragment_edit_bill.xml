        android:id="@+id/delete_bill_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/save_new_patient_button_height"
        android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="@dimen/save_new_patient_button_vertical_margin"
        android:background="@drawable/login_button_background"
        app:layout_constraintTop_toBottomOf="@id/bill_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/generate_bill_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:text="@string/delete_button_text"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/generate_bill_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/save_new_patient_button_height"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
        android:background="@drawable/login_button_background"
        app:layout_constraintTop_toBottomOf="@id/bill_total"
        app:layout_constraintStart_toEndOf="@id/delete_bill_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:text="@string/generate_bill_button_text"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>