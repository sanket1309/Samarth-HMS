                android:text="@string/management_charges_title_text"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/treatment_charges_container"
                app:layout_constraintStart_toStartOf="parent"/>

