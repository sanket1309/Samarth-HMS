                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_edittext_margin_top"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
