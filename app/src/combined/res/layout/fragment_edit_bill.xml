    </ScrollView>

    <TextView
        android:id="@+id/bill_total_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:text="@string/bill_total_title_text"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/bill_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginBottom="@dimen/save_new_patient_button_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/bill_total_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/delete_bill_button"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:text="@string/bill_total_default_text"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

