                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/treatment_charges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                    android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                    android:layout_marginTop="@dimen/add_new_patient_edittext_margin_top"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:autofillHints="name"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/management_charges_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
