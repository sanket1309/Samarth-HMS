                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="@string/add_button_text"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/treatment_charges_container"
                app:layout_constraintEnd_toEndOf="parent"/>

