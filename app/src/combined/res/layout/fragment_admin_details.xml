<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AdminDetailsFragment">

    <View
        android:id="@+id/add_patient_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_patient_background_height"
        android:background="@drawable/add_patient_background"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/add_patient_background"
        app:layout_constraintBottom_toTopOf="@id/edit_admin_button"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.StaffDetailsFragment">

            <TextView
                android:id="@+id/first_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="@string/add_new_patient_first_name_title_text"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_new_patient_edittext_height"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_edittext_margin_top"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:background="@drawable/add_visit_edittext_background"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:inputType="text"
                android:hint="@string/add_new_patient_first_name_hint_text"
                app:layout_constraintTop_toBottomOf="@id/first_name_title"
                android:autofillHints="name"/>

            <TextView
                android:id="@+id/middle_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="@string/add_new_patient_middle_name_title_text"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/first_name"/>

            <EditText
                android:id="@+id/middle_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_new_patient_edittext_height"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_edittext_margin_top"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:background="@drawable/add_visit_edittext_background"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:inputType="text"
                android:hint="@string/add_new_patient_middle_name_hint_text"
                app:layout_constraintTop_toBottomOf="@id/middle_name_title"
                android:autofillHints="name"/>

            <TextView
                android:id="@+id/last_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="@string/add_new_patient_last_name_title_text"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/middle_name"/>

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_new_patient_edittext_height"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_edittext_margin_top"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:background="@drawable/add_visit_edittext_background"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:inputType="text"
                android:hint="@string/add_new_patient_last_name_hint_text"
                app:layout_constraintTop_toBottomOf="@id/last_name_title"
                android:autofillHints="name"/>

            <TextView
                android:id="@+id/gender_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="@string/add_new_patient_gender_title_text"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/last_name"/>

            <RadioGroup
                android:id="@+id/gender_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/gender_title">
                <RadioButton
                    android:id="@+id/gender_male_radio_group_button"
                    android:button="@null"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="@dimen/gender_radio_group_button_width"
                    android:layout_height="@dimen/gender_radio_group_button_height"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@drawable/gender_radio_button_text_color"
                    android:backgroundTint="@drawable/gender_radio_button_background_color"
                    android:checked="true"
                    android:text="@string/gender_male_radio_group_button_text" />
                <RadioButton
                    android:id="@+id/gender_female_radio_group_button"
                    android:button="@null"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="@dimen/gender_radio_group_button_width"
                    android:layout_height="@dimen/gender_radio_group_button_height"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@drawable/gender_radio_button_text_color"
                    android:backgroundTint="@drawable/gender_radio_button_background_color"
                    android:text="@string/gender_female_radio_group_button_text" />
            </RadioGroup>

                        <TextView
                            android:id="@+id/date_of_birth_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                            android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                            android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                            android:textSize="@dimen/add_new_patient_title_text_size"
                            android:paddingStart="@dimen/add_new_patient_field_padding_start"
                            android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                            android:text="@string/date_of_birth_title_text"
                            android:textColor="@color/blue_theme"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/gender_radio_group"/>

                        <com.arefbhrn.maskededittext.MaskedEditText
                            android:id="@+id/date_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/add_new_patient_edittext_height"
                            android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                            android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                            android:layout_marginTop="@dimen/add_new_patient_edittext_margin_top"
                            android:paddingStart="@dimen/add_new_patient_field_padding_start"
                            android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                            android:background="@drawable/add_visit_edittext_background"
                            android:textSize="@dimen/add_new_patient_title_text_size"
                            android:hint="@string/date_of_birth_hint_text"
                            app:layout_constraintTop_toBottomOf="@id/date_of_birth_title"
                            android:inputType="date"
                            app:mask="##/##/####"
                            android:autofillHints="creditCardExpirationDate"/>

            <TextView
                android:id="@+id/contact_number_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="@string/contact_number_title_text"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/date_of_birth"/>

            <com.arefbhrn.maskededittext.MaskedEditText
                android:id="@+id/contact_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_new_patient_edittext_height"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_edittext_margin_top"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:background="@drawable/add_visit_edittext_background"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:hint="@string/contact_number_hint_text"
                app:layout_constraintTop_toBottomOf="@id/contact_number_title"
                android:inputType="phone"
                app:mask="### ### ####"
                android:autofillHints="phone"/>

            <TextView
                android:id="@+id/address_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="Address"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/contact_number"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_edittext_margin_top"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:background="@drawable/add_visit_edittext_background"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:inputType="textMultiLine"
                android:hint="Enter Address"
                app:layout_constraintTop_toBottomOf="@id/address_title"
                android:autofillHints="name"/>

            <TextView
                android:id="@+id/set_username_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="Username"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/address"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_new_patient_edittext_height"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_edittext_margin_top"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:background="@drawable/add_visit_edittext_background"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:inputType="text"
                android:hint="Enter Username"
                app:layout_constraintTop_toBottomOf="@id/set_username_title"
                android:autofillHints="name"/>

            <TextView
                android:id="@+id/set_password_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="Password"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/username"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_new_patient_edittext_height"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_edittext_margin_top"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:background="@drawable/add_visit_edittext_background"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:inputType="textPassword"
                android:hint="Enter Password"
                app:layout_constraintTop_toBottomOf="@id/set_password_title"
                android:autofillHints="name"/>

            <TextView
                android:id="@+id/show_password_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
                android:layout_marginTop="@dimen/add_new_patient_title_margin_top"
                android:textSize="@dimen/add_new_patient_title_text_size"
                android:paddingStart="@dimen/add_new_patient_field_padding_start"
                android:paddingEnd="@dimen/add_new_patient_field_padding_start"
                android:text="Show"
                android:textColor="@color/blue_theme"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_admin_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginTop="@dimen/save_new_patient_button_vertical_margin"
        android:layout_marginBottom="@dimen/save_new_patient_button_vertical_margin"
        android:background="@drawable/edit_button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/blue_theme"
        android:text="Edit"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_admin_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginTop="@dimen/save_new_patient_button_vertical_margin"
        android:layout_marginBottom="@dimen/save_new_patient_button_vertical_margin"
        android:background="@drawable/login_button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:text="Save"
        android:textAllCaps="false"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_admin_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginEnd="@dimen/add_new_patient_horizontal_margin"
        android:layout_marginTop="@dimen/save_new_patient_button_vertical_margin"
        android:layout_marginBottom="@dimen/save_new_patient_button_vertical_margin"
        android:background="@drawable/login_button_background"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:text="Delete"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>