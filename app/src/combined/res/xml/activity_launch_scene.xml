<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/widget" />
        <Constraint
            android:layout_height="250dp"
            android:layout_width="250dp"
            android:id="@+id/launch_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/developed_by"
            android:alpha="0" />
        <Constraint
            android:id="@+id/loader"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/launch_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/widget" />
        <Constraint
            android:id="@+id/launch_logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:alpha="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleX="1.15"
            android:scaleY="1.15"
            app:layout_constraintBottom_toTopOf="@id/developed_by" />
        <Constraint
            android:id="@+id/loader"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/launch_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:alpha="1" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:autoTransition="animateToEnd"
        app:duration="6000" >
        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/launch_logo"
                app:framePosition="40"
                android:alpha="1"
                android:scaleX="1.15"
                android:scaleY="1.15" />
            <KeyAttribute
                app:motionTarget="@+id/loader"
                app:framePosition="40"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/loader"
                app:framePosition="41"
                android:alpha="1" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
