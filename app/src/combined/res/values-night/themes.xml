<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SamarthHMS" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Stops force dark theme by device -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Stops default animation for activity change -->
        <item name="android:windowAnimationStyle">@null</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Launch" parent="Theme.SamarthHMS">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.Login" parent="Theme.SamarthHMS">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_theme</item>
    </style>

</resources>